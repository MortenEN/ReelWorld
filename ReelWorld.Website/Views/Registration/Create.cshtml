@model ReelWorld.DataAccessLibrary.Model.Registration

@{
    ViewData["Title"] = "Create";
}

<h1>Tilmeld dig eventet</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="EventId" class="control-label"></label>*@
                <input asp-for="EventId" class="form-control" type="hidden" />
                <span asp-validation-for="EventId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfileId" class="control-label"></label>
                <input asp-for="ProfileId" class="form-control" />
                <span asp-validation-for="ProfileId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg me-2"></i> Deltag
                </button>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home" class="ms-2">Tilbage til forsiden</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
