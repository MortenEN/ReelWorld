@model ReelWorld.DataAccessLibrary.Model.Registration

@{
    ViewData["Title"] = "Bekræft tilmelding";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4 text-center">

                <h3 class="mb-3">Bekræft tilmelding</h3>
                <p class="mb-4">
                    Er du sikker på, at du vil tilmelde dig dette event?
                </p>

                <form asp-action="Join" method="post">
                    <!-- Hidden EVENT ID -->
                    <input type="hidden" name="eventId" value="@Model.EventId" />

                    <button type="submit" class="btn btn-success w-100 mb-2">
                        Ja, tilmeld mig
                    </button>

                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary w-100">
                        Nej, gå tilbage
                    </a>
                </form>

            </div>
        </div>
    </div>
</div>
