@model ReelWorld.DataAccessLibrary.Model.Profile

@{
    ViewData["Title"] = "Log ind";
}

<div class="login-container mx-auto mt-5 p-4 shadow-sm rounded" style="max-width: 450px; background-color: #ffffff;">
    <h2 class="text-center fw-bold mb-4">Log ind</h2>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    @if (!Context.User.Identity.IsAuthenticated)
    {
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label fw-semibold">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Indtast din email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="HashPassword" class="form-label fw-semibold">Kodeord</label>
                <input asp-for="HashPassword" type="password" class="form-control" placeholder="Indtast dit kodeord" required />
                <span asp-validation-for="HashPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3">
                <i class="bi bi-box-arrow-in-right me-2"></i> Log ind
            </button>

            <div class="text-center">
                <p class="text-muted mb-1">Har du ikke en profil?</p>
                <a asp-controller="Authors" asp-action="Create" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-person-plus me-2"></i> Opret ny profil
                </a>
            </div>
        </form>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
