@model ReelWorld.DataAccessLibrary.Model.Profile

@{
    ViewData["Title"] = "Rediger Profil";
    // Split Interests-strengen til en liste for pre-fyldning
    var selectedInterests = (Model.Interests ?? "").Split(',', StringSplitOptions.RemoveEmptyEntries);
}

<h1>Rediger Profil</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ProfileId" />
            <input type="hidden" asp-for="HashPassword" />

            <div class="form-group">
                <label asp-for="Name" class="control-label">Navn</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Age" class="control-label">Alder</label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNo" class="control-label">Telefon</label>
                <input asp-for="PhoneNo" class="form-control" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="City" class="control-label">By</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Country" class="control-label">Land</label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StreetName" class="control-label">Gadenavn</label>
                <input asp-for="StreetName" class="form-control" />
                <span asp-validation-for="StreetName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StreetNumber" class="control-label">Vejnummer</label>
                <input asp-for="StreetNumber" class="form-control" />
                <span asp-validation-for="StreetNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ZipCode" class="control-label">Postnummer</label>
                <input asp-for="ZipCode" class="form-control" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Beskrivelse</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Relationship" class="control-label">Forhold</label>
                <select asp-for="Relationship" class="form-control"
                        asp-items="Html.GetEnumSelectList<ReelWorld.DataAccessLibrary.Model.Profile.RelationshipStatus>()">
                    <option value="">-- Vælg --</option>
                </select>
                <span asp-validation-for="Relationship" class="text-danger"></span>
            </div>

            <!-- Interests som checkboxe -->
            <div class="form-group">
                <label>Interesser</label><br />
                @foreach (var interest in new[] { "Football", "Cooking", "Reading", "Gaming", "Hiking", "Movies", "Music", "Travel", "Fitness", "Photography" })
                {
                    <label>
                        <input type="checkbox"
                               name="Interests"
                               value="@interest"
                               @(Model.Interests != null && Model.Interests.Split(',').Select(i => i.Trim()).Contains(interest) ? "checked" : "") />
                        @GetInterestLabel(interest)
                    </label>
                    <br />
                }
            </div>

            @functions {
                public string GetInterestLabel(string key) => key switch
                {
                    "Football" => "Fodbold",
                    "Cooking" => "Madlavning",
                    "Reading" => "Læse bøger",
                    "Gaming" => "Gaming",
                    "Hiking" => "Hiking",
                    "Movies" => "Film",
                    "Music" => "Musik",
                    "Travel" => "Rejse",
                    "Fitness" => "Træning",
                    "Photography" => "Fotografering",
                    _ => key
                };
            }

            <div class="form-group mt-3">
                <input type="submit" value="Gem" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a asp-action="Details" asp-route-id="@Model.ProfileId">Tilbage til profil</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
