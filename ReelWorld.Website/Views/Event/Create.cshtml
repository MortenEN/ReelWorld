@model ReelWorld.DataAccessLibrary.Model.Event

@{
    ViewData["Title"] = "Create";
}

<h1>Opret Event</h1>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Title" class="control-label">Titel</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Beskrivelse</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Date" class="control-label">Dato</label>
                <input asp-for="Date" class="form-control" type="datetime-local" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Location" class="control-label">Lokation</label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" id="limitCheckbox" />
                    <label class="form-check-label" for="limitCheckbox">
                        Sæt en begrænsning på antal deltagere
                    </label>
                </div>

                <div id="limitContainer" style="display:none;">
                    <label asp-for="Limit" class="control-label">Max antal deltagere</label>
                    <input asp-for="Limit" class="form-control" id="limitInput" />
                    <span asp-validation-for="Limit" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="IsPublic" class="control-label">Type af Event</label>
                <select asp-for="IsPublic" class="form-control" asp-items="ViewBag.EventTypeList">
                    <option value="">-- Vælg Type --</option>
                </select>
                <span asp-validation-for="IsPublic" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Opret" class="btn btn-success" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index"asp-controller="Home">Tilbage til forside</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>
            const checkbox = document.getElementById('limitCheckbox');
            const limitContainer = document.getElementById('limitContainer');
            const limitInput = document.getElementById('limitInput');

            checkbox.addEventListener('change', function () {
                if (this.checked) {
                    limitContainer.style.display = 'block';
                    limitInput.value = ''; // clear default
                } else {
                    limitContainer.style.display = 'none';
                    limitInput.value = 9999; // high number to indicate no limit
                }
            });

            // Optional: initialize hidden if checkbox is unchecked
            if (!checkbox.checked) {
                limitContainer.style.display = 'none';
                limitInput.value = 9999;
            }
        </script>
    }
}
