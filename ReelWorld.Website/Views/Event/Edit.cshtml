@model ReelWorld.DataAccessLibrary.Model.Event

@{
    ViewData["Title"] = "Edit";
}

<h1>Rediger Event</h1>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="EventId" />

            <div class="form-group">
                <label asp-for="Title" class="control-label">Titel</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Beskrivelse</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Date" class="control-label">Dato</label>
                <input asp-for="Date" class="form-control" type="datetime-local" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Location" class="control-label">Lokation</label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Limit" class="control-label">Max antal deltager (Lad blive tom hvis ingen begrænsning)</label>
                <input asp-for="Limit" class="form-control" />
                <span asp-validation-for="Limit" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IsPublic" class="control-label">Type af Event</label>
                <select asp-for="IsPublic" class="form-control" asp-items="ViewBag.EventTypeList">
                    <option value="">-- Vælg Type --</option>
                </select>
                <span asp-validation-for="IsPublic" class="text-danger"></span>
            </div>

            <!-- Skjult felt for FK_Profile_Id -->
            <input type="hidden" asp-for="FK_Profile_Id" />

            <div class="form-group mt-3">
                <input type="submit" value="Gem" class="btn btn-primary" />
            </div>
        </form>

        <!-- SLET EVENT FORM -->
        <form asp-action="Delete" method="post"
              onsubmit="return confirm('Er du sikker på, at du vil slette dette event?');">
            <input type="hidden" name="id" value="@Model.EventId" />
            <button type="submit" class="btn btn-danger mt-3">Slet Event</button>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Tilbage til forside</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
